<?xml version="1.0" encoding="utf-8"?>
<mona.android.findforme.ui.widget.CheckableFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:findforme="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_take_photo"
    android:layout_width="@dimen/take_photo_fab_height"
    android:layout_height="@dimen/take_photo_fab_height"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginRight="@dimen/keyline_1_minus_8dp"
    android:background="@drawable/btn_fab_background"
    android:contentDescription="@string/take_photo"
    android:layout_gravity="right">

    <ImageView android:id="@+id/iv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_gravity="center"
        android:src="@drawable/ic_camera_white"
        android:contentDescription="@null"/>

</mona.android.findforme.ui.widget.CheckableFrameLayout>